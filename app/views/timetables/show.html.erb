<h1>Timetable</h1>

<p>
  <strong>Tournament:</strong> <%= @timetable.tournament.name %><br>
  <strong>Venue:</strong> <%= @timetable.tournament_venue.venue_name %><br>
  <strong>Rows:</strong> <%= @timetable.row_count %><br>
  <strong>Columns (Courts):</strong> <%= @timetable.column_count %>
</p>

<h2>Timetable Cells</h2>
<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cells.each do |cell| %>
      <tr>
        <td><%= cell.number %></td>
        <td>
          <!-- Add links to assign players/teams to cells in the future -->
          <%= link_to 'Assign Match', '#', class: 'btn btn-secondary disabled' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Regenerate Cells', generate_cells_timetable_path(@timetable), method: :post, class: 'btn btn-warning' %>
<%= link_to 'Back to Timetables', timetables_path, class: 'btn btn-secondary' %>
