<%= form_with(model: @timetable, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :tournament_id, 'Tournament' %>
    <%= form.collection_select :tournament_id, Tournament.all, :id, :name,
      { prompt: 'Select Tournament' },
      { class: 'form-control', required: true } %>
  </div>

  <div class="form-group">
    <%= form.label :tournament_venue_id, 'Venue' %>
    <%= form.collection_select :tournament_venue_id, TournamentVenue.all, :id, :venue_name,
      { prompt: 'Select Venue' },
      { class: 'form-control', required: true } %>
  </div>

  <div class="form-group">
    <%= form.label :row_count, 'Number of Rows (Time Slots)' %>
    <%= form.number_field :row_count, class: 'form-control', min: 1, required: true %>
  </div>

  <div class="form-group">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
